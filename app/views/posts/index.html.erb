<% if @posts.any? %>
  <% @posts.each do |post| %>
  <%= image_tag post.image.url(:medium) %>

  <p><%= post.user.email %></p>
  <p>Posted <%= time_ago_in_words(post.created_at)%> ago</p>
  <p><%= post.description %></p>
  <%= link_to "Write a comment", new_post_comment_path(post) %>
  <ul>
    <% post.comments.each do |comment| %>
      <li><%= "#{comment.write_a_comment}" %></li>
    <% end %>
  </ul>
  <%= link_to 'Delete photo', post_path(post), method: :delete %>
  <% end %>
<% else %>
  No photos yet
<% end %>

<%= link_to "Post a photo", new_post_path %>